{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["NODE_ENV"],
    "globalDependencies": [".env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                "**dist/**"
            ]
        },
        "build:@repo/build": {
            "dependsOn": ["^build"],
            "outputs": [
                "dist/"
            ]
        },
        "start": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "start:kernel": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "start:program": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        }
    },
    "extends": ["//"]
}